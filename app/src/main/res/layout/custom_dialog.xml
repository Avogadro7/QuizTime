<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="120dp"
    android:orientation="vertical"
    android:padding="12dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"


        android:orientation="vertical">

        <TextView
            android:id="@+id/custom_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF0000"
            android:fontFamily="@font/montserrat_semi_bold"
            android:padding="16dp"
            android:text="Game Over"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/custom_score_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:src="@drawable/icon_zero" />

        <TextView
            android:id="@+id/custom_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:gravity="center"
            android:text="You have scored 0 points"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RatingBar
            android:theme="@style/RatingBar"
            android:layout_gravity="center"
            android:id="@+id/rating_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:isIndicator="true"
            android:numStars="3" />

        <Button
            android:id="@+id/custom_restart_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="12dp"
            android:background="#CC202F85"
            android:fontFamily="@font/montserrat_semi_bold"
            android:padding="16dp"
            android:text="Restart Game"
            android:textColor="@color/white"
            android:textSize="30sp"

            android:textStyle="bold" />

        <Button
            android:id="@+id/custom_exit_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="5dp"
            android:background="#FF1100"
            android:fontFamily="@font/montserrat_semi_bold"
            android:padding="16dp"
            android:text="Exit Game"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />


    </LinearLayout>


</androidx.cardview.widget.CardView>