<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space1_photo"
    tools:context=".ActivitySecond">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/savol1"
        app:layout_constraintEnd_toEndOf="@+id/savol1"
        app:layout_constraintStart_toStartOf="@+id/savol1"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout

            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/a"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/yes_tv"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_weight="1.4"
                android:gravity="end"
                android:src="@drawable/baseline_check_24"
                android:textColor="#BB8CC3"
                android:textSize="16dp"
                app:layout_constraintBottom_toTopOf="@id/checknumber_tv"

                app:layout_constraintEnd_toEndOf="@+id/checknumber1_tv"
                app:layout_constraintStart_toStartOf="@+id/checknumber1_tv"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:fontFamily="@font/montserrat_semi_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Question"
                android:textColor="#FFFFFF"
                android:textSize="19dp"
                app:layout_constraintBottom_toTopOf="@id/checknumber_tv"

                />

            <ImageView
                android:id="@+id/false_tv"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.4"
                android:gravity="center_horizontal"
                android:src="@drawable/baseline_clear_24"
                android:textColor="#BB8CC3"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/checknumber_tv"
                app:layout_constraintStart_toStartOf="@+id/checknumber_tv"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            tools:ignore="MissingConstraints">


            <TextView
                android:fontFamily="@font/montserrat_semi_bold"
                android:id="@+id/checknumber1_tv"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"

                android:layout_weight="1"
                android:background="@drawable/bg"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"

                tools:text="0" />

            <TextView
                android:fontFamily="@font/montserrat_semi_bold"
                android:id="@+id/question_tv"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="15dp"
                android:layout_weight="2"
                android:background="@drawable/bg"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="22dp"

                tools:text="0" />

            <TextView
                android:id="@+id/checknumber_tv"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                tools:text="0" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/savol1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@+id/variantrg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:fontFamily="@font/montserrat_semi_bold"
            android:id="@+id/savol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/questionbg"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Question" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RadioGroup
        android:id="@+id/variantrg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/savol1"
        app:layout_constraintStart_toStartOf="@+id/savol1"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">


        <RadioButton
            android:fontFamily="@font/montserrat_semi_bold"
            android:id="@+id/variant_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="18dp"
            android:background="@drawable/vector"
            android:drawablePadding="52dp"
            android:paddingLeft="32dp"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            app:buttonTint="#FFFFFF"
            tools:text="1-variant" />

        <RadioButton
            android:id="@+id/variant_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semi_bold"
            android:layout_marginBottom="18dp"
            android:background="@drawable/vector"
            android:paddingLeft="32dp"

            android:textColor="#FFFFFF"

            android:textSize="17dp"
            app:buttonTint="#FFFFFF"
            tools:text="2-variant" />

        <RadioButton
            android:id="@+id/variant_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semi_bold"
            android:layout_marginBottom="18dp"
            android:background="@drawable/vector"
            android:paddingLeft="32dp"

            android:textColor="#FFFFFF"

            android:textSize="17dp"
            app:buttonTint="#FFFFFF"
            tools:text="3-variant" />

        <RadioButton
            android:id="@+id/variant_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="18dp"
            android:background="@drawable/vector"

            android:paddingLeft="32dp"
            android:textColor="#FFFFFF"

            android:textSize="17dp"
            app:buttonTint="#FFFFFF"
            tools:text="4-variant" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </RadioGroup>

    <TextView
        android:fontFamily="@font/montserrat_semi_bold"
        android:id="@+id/answer_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="116dp"
        android:background="@drawable/bg"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
        app:layout_constraintEnd_toEndOf="@+id/variantrg"
        app:layout_constraintStart_toStartOf="@+id/variantrg"
        app:layout_constraintTop_toBottomOf="@+id/variantrg"
        tools:text="Confirm" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/variantrg"
        app:layout_constraintStart_toStartOf="@+id/variantrg">


        <ImageView

            android:id="@+id/mute_iv"
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:clickable="true"
            android:padding="5dp"
            android:src="@drawable/baseline_music_note_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imute_iv"
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:clickable="true"
            android:padding="5dp"
            android:src="@drawable/music_off"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mute_iv"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/exit"
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:padding="5dp"
            android:src="@drawable/baseline_exit_to_app_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>